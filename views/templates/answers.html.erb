          </div> -->
          <!-- <canvas class="my-4" id="myChart" width="900" height="380"></canvas> -->
          <h2>Survay Reports</h2>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>Mail</th>
                  <th>Gender</th>
                  <th>Age</th>
                  <th>Smoke</th>
                  <th>Alcohol</th>
                  <th>Hour Of Sport</th>
                  <th>Litres Per Day</th>
                </tr>
              </thead>
              <tbody>
                <% @data.each do |data| %>
                <tr>
                  <td><%= data['mail'] %></td>
                  <td><%= data['answers']['gender'] %></td>
                  <td><%= data['answers']['age'] %></td>
                  <td><%= data['answers']['smoke'] %></td>
                  <td><%= data['answers']['alcohol'] %></td>
                  <td><%= data['answers']['hour_of_sport'] %></td>
                  <td><%= data['answers']['litre_per_day'] %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>

